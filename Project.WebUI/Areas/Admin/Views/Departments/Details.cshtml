@model Department
@{
    ViewData["Title"] = "Details";
}
<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
        </div>
        <div class="col-lg-4">
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Basic table card start -->
    <div class="card">
        <div class="card-block">
            <h4 class="sub-title">Basic Inputs</h4>
            <div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Name">
                    </label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.Name
                        </p>
                    </div>
                </div>
               
                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        <a class="btn btn-success mr-2" asp-action="edit" asp-route-id="@Model.Id">Edit</a>
                        <a class="btn btn-info" asp-action="index">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page-body end -->
