@using Project.WebUI.Models.ViewModels
@model PagedViewModel<Permission>

    <table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th class="operation">
                <a asp-action="create" class="btn btn-success">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items)
{
    <tr>
        <td>@item.Name</td>
        <td class="operation">
            <a asp-route-id="@item.Id" class="btn btn-warning" id="add">
               <i class="fa fa-check"></i>
            </a>
            <a asp-action="details" asp-route-id="@item.Id" class="btn btn-secondary">
                <i class="fa fa-eye"></i>
            </a>
            <a onclick="removeEntity(event,@item.Id,'@item.Name')" class="btn btn-danger">
                <i class="fa fa-x"></i>
            </a>
        </td>
    </tr>
}
</tbody>
</table>

@Model.GetPager(Url,"Index",area:"admin",paginateFunction:"goPage")


