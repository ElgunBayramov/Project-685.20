@using Project.WebUI.Business.AccountModule
@model RegisterCommand
@{
    ViewData["Title"] = "Register";
}
 <!-- Start Page Banner Area-->
        <div class="page-banner-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-9 col-md-6">
                        <div class="single-page-banner-content">
                            <h1>Register Account</h1>
                            <p><a asp-controller="users" asp-action="index">Home</a>Register</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="page-banner-img" data-aos="fade-up-left" data-aos-duration="3000" data-aos-once="true">
                            <img src="~/assets/images/page-banner/page-banner-image-1.png" alt="images">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Banner Area-->

<div class="my-account-area pt-100 pb-70">
            <div class="container">
                <div class="my-account-content register-form">
                    <h2>Register</h2>
                    <p>Welcome back register to your account</p>
                    <form method="post">
                        <div asp-validation-summary="All"></div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="my-account-form">
                                    <div class="from-group">
                                        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="my-account-form">
                                    <div class="from-group">
                                        <input asp-for="Surname" type="text" class="form-control" placeholder="Surname">
                                    </div>
                                </div>
                            </div>
                             <div class="col-lg-12">
                                <div class="my-account-form">
                                    <div class="from-group">
                                        <input asp-for="FinCode" type="text" class="form-control" placeholder="FinCode">
                                    </div>
                                </div>
                            </div>
                              <div class="form-group row-primary">
                    <label class="col-sm-2 col-form-label" asp-for="ProfessionId">
                    </label>
                    <div class="col-sm-10">
                       <select class="form-control select2" asp-for="ProfessionId" asp-items="@ViewBag.ProfessionId">
                       </select>
                        <span asp-validation-for="ProfessionId" class="text-danger"></span>
                    </div>
                </div>
                  <div class="form-group row-primary">
                    <label class="col-sm-2 col-form-label" asp-for="DepartmentId">
                    </label>
                    <div class="col-sm-10">
                       <select class="form-control select2" asp-for="DepartmentId" asp-items="@ViewBag.DepartmentId">
                       </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>
                            <div class="col-lg-12">
                                <div class="my-account-form">
                                    <div class="from-group">
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="col-lg-12">
                                <div class="my-account-form">
                                    <div class="from-group">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                    </div>
                                </div>
                            </div>
                             <div class="col-lg-12">
                                <div class="col-lg-12">
                                <div class="my-account-form">
                                    <div class="from-group">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="default-btn">Register Account<i class="ri-arrow-right-line"></i></button>
                    </form>
                    
                </div>
            </div>
        
            </div>
            </div>
            <style>
            .select2-container{
                width: auto!important;
            }
            </style>

    @section addcss{
<link rel="stylesheet" href="~/libs/select2/css/select2.css">
}
@section addjs{
    <script src="~/libs/select2/js/select2.js"></script>
<script src="~/libs/ckeditor5/ckeditor.min.js"></script>
<script>
    $(document).ready(function() {
        ClassicEditor
    .create(document.querySelector('#editor'))
    .catch(error=>{
        console.error(error);
    });
    $('.select2').select2();
    });

</script>
}

