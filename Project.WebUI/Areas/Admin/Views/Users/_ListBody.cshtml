@using Project.WebUI.Models.Entities.Membership
@model PagedViewModel<ProjectUser>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th class="operation">
                <a asp-controller="account" asp-action="register" class="btn btn-success">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>
                    @if (item.EmailConfirmed)
                    {
                        <span class="badge badge-success">@item.Email</span>
                    }
                    else
                    {
                        <span class="badge badge-warning">@item.Email</span>
                    }
                </td>
                <td class="operation">
                    <a asp-action="details" asp-route-id="@item.Id" class="btn btn-secondary">
                        <i class="fa fa-eye"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Model.GetPager(Url,"Index",area:"admin",paginateFunction:"goPage")